@model JobMaster.Service.ViewModels.LoginUser
@{
    ViewData["Title"] = "Login";
    Layout = "~/Areas/Common/Views/Shared/_Layout.cshtml";
}

<div class="card-header">Login</div>
<div class="card-body">
    <form asp-action="Login">
        <div class="form-group">
            <label asp-for="UserName" for="exampleInputEmail1">Username</label>
            <input asp-for="UserName" class="form-control" id="exampleInputEmail1" type="text" aria-describedby="emailHelp" placeholder="Enter username">
        </div>
        <div class="form-group">
            <label asp-for="Password" for="exampleInputPassword1">Password</label>
            <input asp-for="Password" class="form-control" id="exampleInputPassword1" type="password" placeholder="Password">
        </div>
        @*<div class="form-group">
                <div class="form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox"> Remember Password
                    </label>
                </div>
            </div>*@
        @*<a class="btn btn-primary btn-block" href="index.html">Login</a>*@
        <input type="submit" value="Login" class="btn btn-primary btn-block" />
    </form>
    <div class="text-center">
        <a class="d-block small mt-3" href="register.html">Register an Account</a>
        <a class="d-block small" href="forgot-password.html">Forgot Password?</a>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}




