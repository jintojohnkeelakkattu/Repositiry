
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="btn-group">
    <a  asp-area="Admin" asp-controller="Home" asp-action="AddJob" class="btn btn-primary">
        <i class="glyphicon glyphicon-plus-sign"></i>Add Job
    </a>
</div>  
@*<a asp-area="Admin" asp-controller="Home" asp-action="AddJob" class="btn btn-primary pull-right">Add Job</a>*@
    <div class="container">
        <br />
        <div style="margin:0 auto;">
            <table id="example" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Company</th>
                        <th>Description</th>
                        <th>Salary</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_DatatableScriptsPartial");}
        <script>

        $(document).ready(function ()
        {
            $("#example").DataTable({
                "processing": true, // for show progress bar
                "serverSide": true, // for process server side
                //"filter": true, // this is for disable filter (search box)
                //"orderMulti": false, // for disable multiple column at once
                "ajax": {
                    "url": "@Url.Action("GetAllJobs", "Home", new { Area = "Admin" })",
                    "type": "POST",
                    "datatype": "json"
                },
                "columnDefs":
                [{
                    "targets": [0],
                    "visible": false,
                    "searchable": false
                }],
                "columns": [
                    { "data": "id", "name": "id", "autoWidth": true },
                    { "data": "title", "name": "title", "autoWidth": true },
                    { "data": "company", "name": "company", "autoWidth": true },
                    { "data": "description", "name": "description", "autoWidth": true },
                    { "data": "salary", "name": "salary", "autoWidth": true },
                    {
                        "render": function (data, type, full, meta)
                        { return '<a class="btn btn-info" href="/Home/Edit/' + full.id + '">Edit</a>'; }
                    },
                    {
                        data: null, render: function (data, type, row)
                        {
                            return "<a href='#' class='btn btn-danger' onclick=DeleteData('" + row.id + "'); >Delete</a>";
                        }
                    },
                ]

            });
        });


    function DeleteData(id)
        {
            if (confirm("Are you sure you want to delete ...?"))
            {
                Delete(id);
            }
            else
            {
                return false;
            }
        }


        function Delete(id)
    {
        var url = '@Url.Content("~/Admin/")' + "Home/Delete";

            $.post(url, { ID: id }, function (data)
                {
                    if (data)
                    {
                        oTable = $('#example').DataTable();
                        oTable.draw();
                    }
                    else
                    {
                        alert("Something Went Wrong!");
                    }
                });
    }

        </script>
    }
