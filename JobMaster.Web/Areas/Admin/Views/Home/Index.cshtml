<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Jobs
        <a asp-area="Admin" asp-controller="Home" asp-action="AddJob" class="btn-sm btn-primary pull-right padding-20">Add Job</a>
    </div>
    <div class="card-body">

        <div class="table-responsive">

            <table id="example" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Company</th>
                        <th>Description</th>
                        <th>Salary</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_DatatableScriptsPartial");}
    <script>

        $(document).ready(function ()
        {
            $("#example").DataTable({
                "processing": true, // for show progress bar
                "serverSide": true, // for process server side
                //"filter": true, // this is for disable filter (search box)
                //"orderMulti": false, // for disable multiple column at once
                "ajax": {
                    "url": "@Url.Action("GetAllJobs", "Home", new { Area = "Admin" })",
                    "type": "POST",
                    "datatype": "json"
                },
                "columnDefs":
                [{
                    "targets": [0],
                    "visible": false,
                    "searchable": false
                }],
                "columns": [
                    { "data": "id", "name": "id", "autoWidth": true },
                    { "data": "title", "name": "title", "autoWidth": true },
                    { "data": "company", "name": "company", "autoWidth": true },
                    { "data": "description", "name": "description", "autoWidth": true },
                    { "data": "salary", "name": "salary", "autoWidth": true },
                    {
                        "render": function (data, type, full, meta)
                        {
                            var baseurl = '@Url.Action("UpdateJob", "Home", new { Area = "Admin"})'+'?id='+ full.id ;
                            return '<a class="btn-sm btn-info" href="' + baseurl+'" > Update</a>';
                          //  return "<a href='#' class='btn-sm btn-info' onclick=UpdateData('" + full.id + "'); >Update</a>";
                        }
                    },
                    {
                        data: null, render: function (data, type, row)
                                    {
                                        return "<a href='#' class='btn-sm btn-danger' onclick=DeleteData('" + row.id + "'); >Delete</a>";
                                    }
                                },
                ]

            });
        });

                function UpdateData(id) {
                    if (confirm("Are you sure you want to update ...?")) {
                        Update(id);
                    }
                    else {
                        return false;
                    }
                }

                     function Update(id)
    {
        var url = '@Url.Content("~/Admin/")' + "Home/UpdateJob";

            $.get(url, { ID: id }, function (data)
                {
                    if (data)
                    {
                        oTable = $('#example').DataTable();
                        oTable.draw();
                    }
                    else
                    {
                        alert("Something Went Wrong!");
                    }
                });
    }

    function DeleteData(id)
        {
            if (confirm("Are you sure you want to delete ...?"))
            {
                Delete(id);
            }
            else
            {
                return false;
            }
        }


        function Delete(id)
    {
        var url = '@Url.Content("~/Admin/")' + "Home/Delete";

            $.post(url, { ID: id }, function (data)
                {
                    if (data)
                    {
                        oTable = $('#example').DataTable();
                        oTable.draw();
                    }
                    else
                    {
                        alert("Something Went Wrong!");
                    }
                });
    }

    </script>
}
